@model RedLions.Presentation.Web.Models.User

@{
    ViewBag.Title = "Register";
}

<div class="page">
    <div class="page-region">
        <div class="page-region-content">
            @using (Html.BeginForm()) {
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Create an account</legend>

                    <!-- Username -->
                    @Html.LabelFor(model => model.Username)
                    <div class="input-control text" data-role="input-control">
                        @Html.TextBoxFor(model => model.Username, new { placeholder = "Username" } )
                        <button class="btn-clear" tabindex="-1"></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Username)

                    <!-- Email -->
                    @Html.LabelFor(model => model.Email)
                    <div class="input-control text" data-role="input-control">
                        @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" } )
                        <button class="btn-clear" tabindex="-1"></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Email)

                    <!-- Firstname -->
                    @Html.LabelFor(model => model.FirstName)
                    <div class="input-control text" data-role="input-control">
                        @Html.TextBoxFor(model => model.FirstName, new { placeholder = "First name" } )
                        <button class="btn-clear" tabindex="-1"></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.FirstName)

                    <!-- Lastname -->
                    @Html.LabelFor(model => model.LastName)
                    <div class="input-control text" data-role="input-control">
                        @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last name" } )
                        <button class="btn-clear" tabindex="-1"></button>
                    </div>
                        @Html.ValidationMessageFor(model => model.LastName)

                    <!-- Password -->
                    @Html.LabelFor(model => model.Password)
                    <div class="input-control password" data-role="input-control">
                        @Html.PasswordFor(model => model.Password, new { placeholder = "Password", autofocus = "" } )
                        <button class="btn-reveal" tabindex="-1"></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Password)

                    <!-- Confirm Password -->
                    @Html.LabelFor(model => model.ConfirmPassword)
                    <div class="input-control password" data-role="input-control">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = "Password", autofocus = "" } )
                        <button class="btn-reveal" tabindex="-1"></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)

                    <div class="input-control">
                        <button type="submit" class="primary">Create Account</button>
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>