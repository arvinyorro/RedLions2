@model RedLions.Presentation.Web.ViewModels.Membership

@{
    ViewBag.Title = "Local Plan";
    Layout = "~/Views/Shared/_LayoutRedLions.cshtml";
}

<div style="padding: 10px;">
    <h2>Local Plan</h2>

    <p>Hi, thanks for dropping by! Whether you are a "kababayan" in some part of the globe or someone who lives currently in the Philippines, we feel so glad for checking this page out to learn about the business opportunity you can get with UNO Int'l Corp. What you will learn in the video, herein, is intended for you to start-up with a Local Distributor Account and how you are being compensated under the Local Compensation Plan. To learn about it, please play the video.</p>

    <a href="#" id="product-packages-link">Product Packages</a>

    <div id="control" style="display: none;">
        <div id="membership-controls">
            <div id="local-control" style="width: 60%;">
                <label>@Html.LabelFor(m => m.LocalItems)</label>
                <div class="input-control select">
                    @Html.DropDownListFor(m => m.LocalID, Model.LocalItems)
                </div>
            </div>
            </div>

            <div id="local-luzon-action" class="local payment-action" style="margin: 20px; ">

                <div style="width:100%;text-align:center;">
                    <a class="button warning"
                       href="@Url.Action("Start", "Payment", new { paypalID = 47 })">Buy Now</a>
                </div>

            </div>

            <div id="local-visayas-action" class="local payment-action" style="margin: 20px; display: none; ">

                <div style="width:100%;text-align:center;">
                    <a class="button warning"
                       href="@Url.Action("Start", "Payment", new { paypalID = 48 })">Buy Now</a>
                </div>

            </div>

            <div id="local-mindanao-action" class="local payment-action" style="margin: 20px; display: none; ">

                <div style="width:100%;text-align:center;">
                    <a class="button warning"
                       href="@Url.Action("Start", "Payment", new { paypalID = 49 })">Buy Now</a>
                </div>

            </div>

    </div>
</div>


@section Scripts {

    <script>
        var modelID =
        {
            localID: '#' + '@Html.IdFor(model => model.LocalID)',
        };

        $(document).ready(function () {

            $(modelID.localID).change(localChanged);
            $("#product-packages-link").click(function () {
                $("#control").show();
            });
        });

        function localChanged() {

            console.log($(modelID.localID).val());

            $(".local.payment-action").hide("hide");

            switch ($(modelID.localID).val()) {
                case "1":
                    $("#local-luzon-action").show("fast");
                    break;
                case "2":
                    $("#local-visayas-action").show("fast");
                    break;
                case "3":
                    $("#local-mindanao-action").show("fast");
                    break;
            }
        }

    </script>
}
