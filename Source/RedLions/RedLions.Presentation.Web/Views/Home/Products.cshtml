@section Scripts {
    <script>

        var selectedProductID = '@ViewBag.SelectedID';

        $(document).ready(function () {

            $("#summary-skin").click(function () {
                $(".panel").hide();
                $(".panel.skin").show();
                $(".summary").removeClass("selected");
                $("#summary-skin").addClass("selected");
            });

            $("#summary-food").click(function () {
                $(".panel").hide();
                $(".panel.food").show();
                $(".summary").removeClass("selected");
                $("#summary-food").addClass("selected");
            });

            $("#summary-healthy").click(function () {
                $(".panel").hide();
                $(".panel.healthy").show();
                $(".summary").removeClass("selected");
                $("#summary-healthy").addClass("selected");
            });

            $("#summary-house").click(function () {
                $(".panel").hide();
                $(".panel.house").show();
                $(".summary").removeClass("selected");
                $("#summary-house").addClass("selected");
            });

            $("#summary-wellness").click(function () {
                $(".panel").hide();
                $(".panel.wellness").show();
                $(".summary").removeClass("selected");
                $("#summary-wellness").addClass("selected");
            });

            console.log("Selected product ID: ", selectedProductID);

            $(".panel").hide();
            switch(selectedProductID)
            {
                case '1':
                    $(".panel").show();
                    break;
                case '2':
                    $(".panel.skin").show();
                    $("#summary-skin").addClass("selected");
                    break;
                case '3':
                    $(".panel.food").show();
                    $("#summary-food").addClass("selected");
                    break;
                case '4':
                    $(".panel.healthy").show();
                    $("#summary-healthy").addClass("selected");
                    break;
                case '5':
                    $(".panel.house").show();
                    $("#summary-house").addClass("selected");
                    break;
                case '6':
                    $(".panel.wellness").show();
                    $("#summary-wellness").addClass("selected");
                    break;
            }

            // Dialog Functionality
            $(".panel").on('click', displayDialog);
        });

        function displayDialog() {
            var productTitle = $(this).find(".panel-heading").html();
            var productSummary = $(this).find(".product-summary").html();

            $.Dialog({
                shadow: true,
                overlay: true,
                icon: '<span class="icon-rocket"></span>',
                title: productTitle,
                width: 500,
                padding: 10,
                content: productSummary,
            });
        }

    </script>
}
