@model RedLions.Presentation.Web.ViewModels.UpdateMember

@section NavigationControls
{
    @{ Html.RenderPartial("_ProfileControlPartial"); }
}

@{
    ViewBag.Title = "Edit My Profile";
    Layout = "~/Views/Profile/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Account Details</legend>

        <!-- Username -->
        @Html.LabelFor(model => model.Username)
        <div class="input-control text" data-role="input-control">
            @Html.TextBoxFor(model => model.Username, new { placeholder = "Username" } )
            <button class="btn-clear" tabindex="-1"></button>
        </div>
        @Html.ValidationMessageFor(model => model.Username)

        <!-- UnoID -->
        @Html.LabelFor(model => model.UnoID)
        <div class="input-control text" data-role="input-control">
            @Html.TextBoxFor(model => model.UnoID, new { placeholder = "UNO ID Number" })
            <button class="btn-clear" tabindex="-1"></button>
        </div>
        @Html.ValidationMessageFor(model => model.UnoID)

        <!-- Email -->
        @Html.LabelFor(model => model.Email)
        <div class="input-control text" data-role="input-control">
            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" } )
            <button class="btn-clear" tabindex="-1"></button>
        </div>
        @Html.ValidationMessageFor(model => model.Email)

        <!-- Cellphone Number -->
        @Html.LabelFor(model => model.CellphoneNumber)
        <div class="input-control text" data-role="input-control">
            @Html.TextBoxFor(model => model.CellphoneNumber, new { placeholder = "Contact number" })
            <button class="btn-clear" tabindex="-1"></button>
        </div>
        @Html.ValidationMessageFor(model => model.CellphoneNumber)

        <!-- Firstname -->
        @Html.LabelFor(model => model.FirstName)
        <div class="input-control text" data-role="input-control">
            @Html.TextBoxFor(model => model.FirstName, new { placeholder = "First name" } )
            <button class="btn-clear" tabindex="-1"></button>
        </div>
        @Html.ValidationMessageFor(model => model.FirstName)

        <!-- Lastname -->
        @Html.LabelFor(model => model.LastName)
        <div class="input-control text" data-role="input-control">
            @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last name" } )
            <button class="btn-clear" tabindex="-1"></button>
        </div>
         @Html.ValidationMessageFor(model => model.LastName)

        <!-- Country -->
        <div class="editor-field">
            @Html.LabelFor(model => model.Country)
            <div class="input-control select" data-role="input-control">
                @Html.DropDownListFor(model => model.Country.ID, Model.CountrySelectListItems)
            </div>
            @Html.ValidationMessageFor(model => model.Country.ID)
        </div>

        <div class="input-control">
            <input type="submit" value="Save" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to my Profile", "Index")
</div>

