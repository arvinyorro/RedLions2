@using RedLions.Presentation.Web.Components

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>RedLions - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/bundles/profile-ui")
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    @Styles.Render("~/bundles/mvc-custom")
    @Styles.Render("~/bundles/metro-style")
    @Scripts.Render("~/bundles/metro-script")
</head>
<body class="metro redlions general-ui member-ui">

    <nav class="sidebar">
        <ul>
            <li class="title">Profile</li>
            <li @Html.HighlightActive("Details")><a href="@Url.Action("Details", "Profile")"><i class="icon-user-3"></i>@User.Identity.Name</a></li>
            <li @Html.HighlightActive("Index")><a href="@Url.Action("Index", "Profile")"><i class="icon-home"></i>Home</a></li>
            <li @Html.HighlightActive("Messages")><a href="@Url.Action("Messages", "Profile")"><i class="icon-mail"></i>Messages</a></li>
            <li class="stick bg-yellow">
                <a class="dropdown-toggle" href="#"><i class="icon-tree-view"></i>Networks</a>
                <ul class="dropdown-menu" data-role="dropdown">
                    <li @Html.HighlightActive("Referrals")><a href="@Url.Action("Referrals", "Profile")">Referrals</a></li>
                    <li @Html.HighlightActive("Inquiries")><a href="@Url.Action("Inquiries", "Profile")">Inquiries</a></li>
                </ul>
            </li>

            <li class="title">RedLions</li>
            <li><a href="#"><i class="icon-rocket"></i>News Feed</a></li>
            <li><a href="#"><i class="icon-basket"></i>Products</a></li>
            <li><a href="#"><i class="icon-calendar"></i>Events</a></li>
            <li><a href="#"><i class="icon-alarm-2"></i>Activities</a></li>
            <li><a href="#"><i class="icon-cone"></i>Tutorials</a></li>            
            <li><a href="#"><i class="icon-smiley"></i>Incentives</a></li>
            <li><a href="#"><i class="icon-medal"></i>Success</a></li>
            <li><a href="#"><i class="icon-cars"></i>Super Cars</a></li>
            <li><a href="#"><i class="icon-star-3"></i>Company Profile</a></li>
        </ul>
    </nav>
    
    <header>
        <nav class="navigation-bar">
            <div class="navigation-bar-content">
                <span class="element-divider left-nav"></span>
                    <div class="element">
                        <a href="@Url.Action("Index", "Home")" class="fg-white">Redlions Online</a>
                    </div>
                <span class="element-divider"></span>

                @RenderSection("NavigationControls", false)

                <span class="element-divider"></span>


                <div class="element place-right">
                    <a class="dropdown-toggle" href="#">
                        <span class="icon-cog"></span>
                    </a>
                    <ul class="dropdown-menu place-right" data-role="dropdown">
                        <li>
                            @using (Html.BeginForm("Logout", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                            }
                        </li>

                    </ul>
                </div>
                <span class="element-divider place-right"></span>
                <a class="element place-right" href="#"><span class="icon-earth"></span></a>
                <span class="element-divider place-right"></span>
                <button class="element place-right">
                    <i class="icon-user-3 on-left"></i>@User.Identity.Name
                </button>
            </div>
        </nav>
    </header>

    <div class="page">
        <div class="page-region">
            <div class="page-region-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="page-footer">
        <div class="page-footer-content">
            <!--Html.Partial("_FooterPartial")-->
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
