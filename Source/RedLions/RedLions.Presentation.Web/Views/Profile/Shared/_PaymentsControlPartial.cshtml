<div class="element input-element">
    <div class="input-control text">
        @using (Html.BeginForm("Payments", "Profile", FormMethod.Get))
        {
            @Html.TextBox("SearchEmail", ViewBag.SearchEmail as string, new { placeholder = "Search Email...", autocomplete = "off" })
            <button class="btn-search"></button>
            <ul class="dropdown-menu option-menu" data-role="dropdown">
                <li><a href="#">Advance Search</a></li>
            </ul>
        }
    </div>
</div>

<span class="element-divider"></span>

<div class="element">
    <a href="@Url.Action("ReadAllPayments", "Profile")" class="fg-white">Read All</a>
</div>


<span class="element-divider"></span>

<div class="element">
    @if (ViewBag.UnreadOnly == false)
    {
        <a href="@Url.Action("Payments", "Profile", new { unread = true })" class="fg-white">Show All Unread</a>
    }
    else
    {
        <a href="@Url.Action("Payments", "Profile", new { unread = false })" class="fg-white active">Show All</a>
    }
</div>

